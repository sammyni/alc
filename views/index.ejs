<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title><%= title %></title>
        <% include partials/core_styles %>
    </head>
    <body>
        <% include partials/navigation %>
        <div class="w3-section">
            <div class="w3-container">
                <div class="w3-section w3-padding-32 w3-center">
                    <div class="w3-card-4 w3-round w3-white" style="display: inline-block">
                        <% if(data){ %>
                            <% if(data.number > 1){ %>
                                <div class="w3-jumbo w3-padding"><%= data.number %></div><div class="w3-xxlarge w3-padding">STUDENTS</div>
                            <% }else{ %>
                                <div class="w3-jumbo w3-padding"><%= data.number %></div><div class="w3-xxlarge w3-padding">STUDENT</div>
                            <% } %>
                        <% }else { %>
                            <div class="w3-jumbo w3-padding"> 0 </div><div class="w3-xxlarge w3-padding">STUDENT</div>
                        <% } %>
                    </div>

                    <div class="w3-section" style="margin-top: 100px!important;">
                        <div class="w3-center">
                            <a href="/add" class="w3-btn w3-green w3-hover-green w3-hover-opacity w3-margin-right">Add Student</a>
                            <a href="/list" class="w3-btn w3-green w3-hover-green w3-hover-opacity w3-margin-left">List Students</a>
                        </div>
                    </div>
                    <% if (data && data.number > 0) { %>
                        <div class="w3-section">
                            <div class="w3-padding w3-center w3-text-green w3-large">Latest Student</div>
                            <div class="w3-padding w3-text-grey">
                                <b><%= data.students[data.number-1].first_name + " " + data.students[data.number-1].middle_name + " " + data.students[data.number-1].last_name %></b>
                                <br> <span  class="w3-text-black">Reg. Number: <%= data.students[data.number-1].reg_number %></span>
                                <div class="w3-small w3-text-blue">
                                    <a href="<%= "/view/" + data.students[data.number-1].reg_number %>" class="w3-button w3-padding-small">View</a>
                                    <button class="w3-button w3-padding-small"><i class="fa fa-edit"></i></button>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <% include partials/core_scripts %>
    </body>
</html>
